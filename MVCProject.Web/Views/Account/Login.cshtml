@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}
<span ng-init="IsInChildView()"></span>
<div ng-controller="AccountCtrl" ng-init="CheckLogin('@ViewBag.IsSessionExpired');" class="eternity-form scroll-animations-activated">
    <main>
        <div class="wrapper">
            <section class="login-content">
                <img src="~/Content/images/login-bg-leaf1.png" class="lb-img d-lg-block d-none" alt="">
                <img src="~/Content/images/login-bg-leaf2.png" class="rb-img d-lg-block d-none" alt="">
                <div class="container h-100">
                    <div class="row align-items-center justify-content-center h-100">
                        <div class="col-12">
                            <div class="row align-items-center">
                                <div class="col-lg-6 mb-lg-0 mb-4 mt-lg-0 mt-4">
                                    <img src="~/Content/images/login-img.svg" class="img-fluid w-80" />
                                </div>
                                <div class="col-lg-4">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <form name="frmLogin" class="form-horizontal login-form" role="form" ng-submit="DoLogin(loginFormData,frmLogin);"
                                                  novalidate>
                                                <div class="auth-brand text-lg-start text-center mb-5">
                                                    <img src="~/Content/images/company-logo.svg" ng-src="{{applicationLogo}}" fallback-src="~/Content/images/company-logo.svg"
                                                         alt="#" ng-class="{'blur-7' : !isLogoLoaded}" style="height: 70px;max-width: 300px;" /><span style="color: #D40003;
                                font-size: 18px; font-weight: bold;"></span>
                                                </div>
                                                <div class="form-group mb-3 ">
                                                    <label for="emailaddress" class="form-label">Email address</label>
                                                    <input type="text" id="txtUserName" name="txtUserName" ng-model="loginFormData.Email"
                                                           @*autocomplete=off*@
                                                           class="form-control mb-2" ng-class="{'border-color' : frmLogin.txtUserName.$dirty && frmLogin.txtUserName.$invalid}" maxlength="50" required ng-focus="true" tabindex="1" placeholder="@Resource.UserName" />
                                                    <div class="label label-danger" data-ng-show="frmLogin.txtUserName.$dirty && frmLogin.txtUserName.$invalid">
                                                        <span data-ng-show="frmLogin.txtUserName.$error.required">@Resource.UserNameRequired</span>
                                                    </div>
                                                </div>
                                                <div class="form-group position-relative mb-3">
                                                    <a class="text-muted float-end forgot-password" tabindex="5" ng-click="OpenResetPasswordModel()">
                                                        <i class="fa fa-lock m-r-5"></i>@Resource.ForgotPassword?
                                                    </a>
                                                    <label for="password" class="form-label">Password</label>
                                                    <input name="txtPassword" id="txtPassword" type="{{showPassword ? 'text' : 'password'}}" ng-model="loginFormData.Password" autocomplete=off
                                                           readonly onfocus="$(this).removeAttr('readonly');"
                                                           class="form-control mb-2" ng-class="{'border-color' : frmLogin.txtPassword.$dirty && frmLogin.txtPassword.$invalid}" maxlength="25" required tabindex="2" placeholder="@Resource.Password" />
                                                    <div class="input-group-append cursor-pointer position-absolute">
                                                        <span class="input-group" ng-click="showPassword = !showPassword">
                                                            <i class="fa" ng-class="{'fa-eye': !showPassword, 'fa-eye-slash': showPassword}"></i>
                                                        </span>
                                                    </div>
                                                    <div class="label label-danger" data-ng-show="frmLogin.txtPassword.$dirty && frmLogin.txtPassword.$invalid">
                                                        <span data-ng-show="frmLogin.txtPassword.$error.required">@Resource.PasswordRequired</span>
                                                    </div>
                                                </div>
                                                <div class="form-group mb-3">
                                                    <input class="form-check-input" type="checkbox" value="" id="chkRememberMe" ng-model="loginFormData.Remember" tabindex="3">

                                                    <label for="chkRememberMe">
                                                        Remember me
                                                    </label>
                                                </div>
                                                <div class="d-grid mb-0 text-center form-group">
                                                    <button type="submit" class="btn btn-primary w-25" tabindex="4">
                                                        @Resource.Login
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>








