<div class="modal-header">
    <button type="button" class="close" ng-click="CancelClick()">
        ×</button>
    <h4 class="modal-title" id="custom-width-modalLabel">
        @Resource.Attachments</h4>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-12">
            <safe-file-upload model-data="entity.DocumentsList" changed-data="entity.AttachmentsList" placeholder=".JPEG, .PNG, .BMP, .XLS, .XLSX, .DOC, .DOCX, .RTF and .PDF"
                              is-all-file-uploaded="isAllFileUploaded" is-view-only="isReadOnly" input-container-class="col-md-8" grid-container-class="col-md-12"></safe-file-upload>
        </div>
    </div>
</div>
<div class="modal-footer" ng-if="!isReadOnly">
    <button class="btn btn-success waves-effect w-md waves-light m-b-5" ng-click="OKClick()"
        ng-disabled="entity.AttachmentsList.length==0 || !isAllFileUploaded">
        @Resource.Save</button>
    <div class="btn btn-danger waves-effect w-md waves-light m-b-5" ng-click="CancelClick()">
        @Resource.Cancel</div>
</div>
