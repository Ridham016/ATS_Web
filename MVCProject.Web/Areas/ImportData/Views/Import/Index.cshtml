@{
    ViewBag.Title = @Resource.Registration;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    .border-color {
        border-color: red !important;
    }

    .border-green {
        border-color: #07c907 !important;
    }
</style>

<div ng-controller="ImportCtrl" novalidate>
    <div class="main-page-title title-icon relative l">
        <i class="fa fa-user-plus icon-position" style="padding-top: 8px;"></i>
        <h4 class="header-title-sub l">@Resource.ApplicantRegister</h4>
        <div class="pull-right">
        </div>
    </div>
    <div class="card-box">
        <div class="row mb-3">
            <div class="col-4">
                <div class="row">
                    <div class="col-8">
                        <input class="form-control" type="file" id="file" ng-model="myFile" />
                    </div>
                    <div class="col-4">
                        <button class="btn btn-success" ng-click="uploadFile()">Import</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row mt-3 mb-4">
                    <div class="col-md-10">
                        <div class="form-group">
                            @*<button type="button" class="btn btn-success waves-effect w-md waves-light m-b-5" ng-click="showNextApplicant()">
                                    @Resource.Save
                                </button>*@

                            <button type="submit" class="btn btn-success waves-effect w-md waves-light m-b-5" ng-click="submitApplicants(applicantDetailScope)" @*ng-disabled="frmRegister.$invalid"*@>
                                Add Applicants
                            </button>
                            <button type="button" ng-click="ClearFormData(frmRegister)" class="btn btn-danger waves-effect w-md waves-light m-b-5"
                                    tabindex="4">
                                @Resource.Clear
                            </button>
                        </div>
                    </div>
                </div>
                <hr class="section-divider" />
                <div class="row mt-4">
                    <div class="col-md-12">
                        <div class="row mb-3 align-items-baseline">
                            <div class="col-md-5">
                                <label class="table-title">
                                    @Resource.Registration @Resource.Details
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="form-control-static">
                                <scrollable-table scroll-height="510">
                                    <table ng-table="tableParams" id="datatable" class="frozen-columns table table-bordered table-hover">
                                        <tbody>
                                            <tr ng-repeat="h in applicant">
                                                <td data-title="'@Resource.SrNo'" header-class="'colSrno'" ng-class="'colSrno'">
                                                    {{(tableParams.$params.page-1)*tableParams.$params.count+($index + 1)}}
                                                </td>
                                                <td data-title="'@Resource.ApplicantName'" sortable="'FirstName'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.FirstName}} {{h.MiddleName}} {{h.LastName}}
                                                </td>
                                                <td data-title="'@Resource.ApplicantEmail'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.Email}}
                                                </td>
                                                <td data-title="'@Resource.ApplicantPhone'" header-class="'colPhone'" ng-class="'colPhone breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.Phone}}
                                                </td>
                                                <td data-title="'@Resource.ApplicantAddress'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.Address}}
                                                </td>
                                                <td data-title="'@Resource.ApplicantDate'" sortable="'ApplicantDate'" header-class="'colExperience'" ng-class="'colExperience breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.ApplicantDate | date}}
                                                </td>
                                                <td data-title="'@Resource.ApplicantDOB'" header-class="'colDate'" ng-class="'colDate breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.DateOfBirth | date}}
                                                </td>
                                                <td data-title="'@Resource.CurrentCompany'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.CurrentCompany}}
                                                </td>
                                                <td data-title="'@Resource.CurrentDesignations'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.CurrentDesignation}}
                                                </td>
                                                <td data-title="'@Resource.TotalExperience'" header-class="'colExperience'" ng-class="'colExperience breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.TotalExperience}}
                                                </td>
                                                <td data-title="'@Resource.DetailedExperince'" header-class="'colExperience'" ng-class="'colExperience breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.DetailedExperience}}
                                                </td>
                                                <td data-title="'@Resource.CurrentCTC'" header-class="'colNum'" ng-class="'colNum breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.CurrentCTC}}
                                                </td>
                                                <td data-title="'@Resource.ExpectedCTC'" header-class="'colNum'" ng-class="'colNum breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.ExpectedCTC}}
                                                </td>
                                                <td data-title="'@Resource.NoticePeriod'" header-class="'colNum'" ng-class="'colNum breakword overflow-ellipsis cursor-pointer'">
                                                    <span ng-repeat="(key,value) in NoticePeriod">
                                                        <span ng-if="key == h.NoticePeriod">{{value}}</span>
                                                    </span>
                                                </td>
                                                <td data-title="'@Resource.CurrentLocation'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.CurrentLocation}}
                                                </td>
                                                <td data-title="'@Resource.PreferedLocation'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.PreferedLocation}}
                                                </td>
                                                <td data-title="'@Resource.ReasonForChange'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.ReasonForChange}}
                                                </td>
                                                <td data-title="'@Resource.SkillDescription'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.SkillDescription}}
                                                </td>
                                                <td data-title="'@Resource.PortfolioLink'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.PortfolioLink}}
                                                </td>
                                                <td data-title="'@Resource.LinkedinLink'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.LinkedinLink}}
                                                </td>
                                                <td data-title="'@Resource.OtherLink'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.OtherLink}}
                                                </td>
                                                <td data-title="'@Resource.Active'" header-class="'colActive'" ng-class="'colActive text-center'">
                                                    <input type="checkbox" class="js-switch" ui-switch options="switchOptions" ng-model="h.IsActive"
                                                           ng-disabled="true" />
                                                </td>
                                                @*<td data-title="Errors" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                        {{errors}}
                                                    </td>*@
                                                @*<td ng-if="errors[$index]" data-title="Errors" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                        {{errors[$index].join(',')}}
                                                    </td>*@
                                            </tr>
                                        </tbody>
                                    </table>
                                </scrollable-table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/ImportData/Import")
}
