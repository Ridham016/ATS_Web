@{
    ViewBag.Title = @Resource.JobOpenings;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .colSrno {
        width: 40px !important;
        min-width: 40px !important;
        max-width: 40px !important;
    }

    .colPosition {
        width: 200px !important;
        min-width: 200px !important;
        max-width: 200px !important;
    }

    .colActive {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
    }

    .colAction {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
    }
</style>

<div ng-controller="JobListingCtrl" ng-init="sortBy(SortBy,searchDetail);">
    <div class="main-page-title title-icon relative l">
        <i class="fa fa-list-ul icon-position" style="padding-top: 8px;"></i>
        <h3 class="header-title-sub l">@Resource.JobOpenings</h3>
        <div class="pull-right">
        </div>
    </div>
    <div class="card-box">
        <div class="row ">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <input type="daterange" class="form-control" autocomplete="off"
                                   placeholder="Select Date Range" max-date="{{CurrentDate}}" id="DateRange" name="DateRange" ng-model="searchDetail.daterange" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <button type="button" class="btn-sm btn btn-primary waves-effect w-md waves-light me-2" ng-click="sortBy(SortBy,searchDetail)">
                                Search
                            </button>
                            <button type="reset" ng-click="ClearFormData()" class="btn btn-sm btn-danger waves-effect w-md waves-light"
                                    tabindex="4">
                                @MVCProject.Common.Resources.Resource.Clear
                            </button>
                        </div>
                    </div>
                    <div class="mb-3 col-lg-2 offset-3 col-md-4 col-6">
                        <select class="form-select" name="SortBy" ng-change="sortBy(SortBy,searchDetail)" ng-model="SortBy">
                            <option value="date" selected>Sort By: Date</option>
                            <option value="a-z">Sort By: A-Z</option>
                            <option value="z-a">Sort By: Z-A</option>
                        </select>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12" ng-repeat="h in JobList">
                        <div class="card joblist p-3">
                            <div ng-show="h.Posted == 0" class="ribbon-wrapper">
                                <div class="ribbon">New</div>
                            </div>
                            <h4 class="card-title">{{h.PositionName}}</h4>
                            <p class="card-subtitle text-success">{{h.CompanyName}}</p>
                            <div class="d-flex mt-3">
                                <div class="group">
                                    <i class="fa fa-briefcase me-2"></i>
                                    <span class="">{{h.Experience}}</span>
                                </div>
                                <span class="me-3 ms-3 border-end"></span>
                                <div class="group">
                                    <i class="fa fa-indian-rupee-sign me-2"></i>
                                    <span class="">{{h.Salary}}</span>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-lg-12">
                                    <i class="fa fa-location-dot me-2"></i>
                                    <span class="">{{h.CompanyVenue}}</span>
                                </div>
                            </div>
                            <hr />
                            <div class="mt-0 d-flex justify-content-between">
                                <div class="group">
                                    Posted :
                                    <span class="ms-1"><b>{{h.Posted}}</b> days ago</span>
                                </div>
                                <div class="group">
                                    <a href="~/ApplicantRegister/Registration#?PostingId={{h.PostingId}}" class="btn shadow-none btn-xs btn-success">Register</a>
                                    <a href="~/JobOpenings/JobOpenings/Description#?PostingId={{h.PostingId}}" class="ms-2 btn btn-xs btn-outline-success">View Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/JobListing/JobListing")
}
