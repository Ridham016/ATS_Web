@{
    ViewBag.Title = @Resource.Registration;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .colSrno {
        width: 40px !important;
        min-width: 40px !important;
        max-width: 40px !important;
    }

    .colPosition {
        width: 200px !important;
        min-width: 200px !important;
        max-width: 200px !important;
    }

    .colActive {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
    }

    .colAction {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
    }
    .colDownload {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
    }

    .border-color {
        border-color: red !important;
    }

    .border-green {
        border-color: #07c907 !important;
    }
</style>

<div ng-controller="RegistrationCtrl" novalidate>
    <div class="main-page-title title-icon relative l">
        <i class="fa fa-user-plus icon-position" style="padding-top: 8px;"></i>
        <h4 class="header-title-sub l">@Resource.ApplicantRegister</h4>
        <div class="pull-right">
        </div>
    </div>
    <div class="card-box">
        <div class="row">
            <div class="col-md-12">
                <!-- start designation form -->
                <form name="frmRegister" ng-submit="SaveApplicantDetails(applicantDetailScope)"
                      novalidate>
                    <div class="accordion" id="accordionExample">
                        <div class="accordion-item" id="personal_details">
                            <h1 class="Personal Details" id="headingOne">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    Personal Details
                                </button>
                            </h1>
                            <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <div class="row">
                                        <div class="col-md-4 mt-lg-0 mt-md-0 mt-sm-0">
                                            <div class="form-group">
                                                <label>
                                                    @Resource.ApplicantFirstName <span class="required-field">*</span>
                                                </label>
                                                <input type="text" ng-class="{'border-color' : frmRegister.FirstName.$dirty && frmRegister.FirstName.$invalid}" class="form-control" id="FirstName" ng-focus="true" name="FirstName" ng-model="applicantDetailScope.FirstName" required placeholder="Enter First Name" maxlength="250">
                                                <div class="c">
                                                </div>
                                                <div class="label label-danger" data-ng-show="frmRegister.FirstName.$dirty && frmRegister.FirstName.$invalid">
                                                    <span data-ng-show="frmRegister.FirstName.$error.required">@Resource.FirstNameRequired</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 mt-lg-0 mt-md-0 mt-sm-3">
                                            <div class="form-group">
                                                <label>
                                                    @Resource.ApplicantMiddleName 
                                                </label>
                                                <input type="text" class="form-control" name="MiddleName" ng-model="applicantDetailScope.MiddleName" required placeholder="Enter Middle Name" maxlength="250">
                                            </div>
                                        </div>
                                        <div class="col-md-4 mt-lg-0 mt-md-0 mt-sm-3">
                                            <div class="form-group">
                                                <label>
                                                    @Resource.ApplicantLastName <span class="required-field">*</span>
                                                </label>
                                                <input type="text" ng-class="{'border-color' : frmRegister.LastName.$dirty && frmRegister.LastName.$invalid}" class="form-control" name="LastName" ng-model="applicantDetailScope.LastName" required placeholder="Enter Last Name" maxlength="250">
                                                <div class="c">
                                                </div>
                                                <div class="label label-danger" data-ng-show="frmRegister.LastName.$dirty && frmRegister.LastName.$invalid">
                                                    <span data-ng-show="frmRegister.LastName.$error.required">@Resource.LastNameRequired</span>
                                                </div>
                                            </div>
                                        </div>

                                        <!--Remarks-->
                                        <div class="col-md-4 mt-3">
                                            <div class="form-group">
                                                <label>
                                                    @Resource.ApplicantEmail<span class="required-field">*</span>
                                                </label>
                                                <input type="email" ng-model-options="{ updateOn: 'blur' }" ng-class="{'border-color' : frmRegister.Email.$dirty && frmRegister.Email.$invalid,'border-green' : frmRegister.Email.$valid}" class="form-control" placeholder="Enter Email" name="Email" ng-model="applicantDetailScope.Email" required />
                                                <div class="c">
                                                </div>
                                                <div class="label label-danger" data-ng-show="frmRegister.Email.$dirty && frmRegister.Email.$invalid">
                                                    <span data-ng-show="frmRegister.Email.$error.required">@Resource.EmailRequired</span>
                                                    <span data-ng-show="frmRegister.Email.$error.email">@Resource.EmailRequired</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 mt-3">
                                            <div class="form-group">
                                                <label>
                                                    @Resource.ApplicantPhone<span class="required-field">*</span>
                                                </label>
                                                <input type="text" ng-class="{'border-color' : frmRegister.Phone.$dirty && frmRegister.Phone.$invalid}" class="form-control" placeholder="Enter Phone" name="Phone" ng-model="applicantDetailScope.Phone" required />
                                                <div class="c">
                                                </div>
                                                <div class="label label-danger" data-ng-show="frmRegister.Phone.$dirty && frmRegister.Phone.$invalid">
                                                    <span data-ng-show="frmRegister.Phone.$error.required">@Resource.PhoneRequired</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 mt-3">
                                            <div class="form-group">
                                                <label>
                                                    @Resource.ApplicantAddress
                                                </label>
                                                <input type="text" ng-class="{'border-color' : frmRegister.Address.$dirty && frmRegister.Address.$invalid}" class="form-control" placeholder="Enter Address" name="Address" ng-model="applicantDetailScope.Address" required />
                                                <div class="c">
                                                </div>
                                                <div class="label label-danger" data-ng-show="frmRegister.Address.$dirty && frmRegister.Address.$invalid">
                                                    <span data-ng-show="frmRegister.Address.$error.required">@Resource.ApplicantAddress</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 mt-3">
                                            <div class="form-group">
                                                <label>
                                                    @Resource.ApplicantDOB<span class="required-field">*</span>
                                                </label>
                                                <input type="date" ng-class="{'border-color' : frmRegister.DOB.$dirty && frmRegister.DOB.$invalid}" class="form-control" placeholder="Enter Date of Birth" name="DOB" ng-model="applicantDetailScope.DateOfBirth" required />
                                                <div class="c">
                                                </div>
                                                <div class="label label-danger" data-ng-show="frmRegister.DOB.$dirty && frmRegister.DOB.$invalid">
                                                    <span data-ng-show="frmRegister.DOB.$error.required">@Resource.ApplicantDOBRequired</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 mt-3">
                                            <div class="form-group">
                                                <div class="form-control-static">
                                                    <label>

                                                    </label>
                                                    <div class="checkbox checkbox-info">
                                                        <input type="checkbox" id="chkIsActive" name="chkIsActive" ng-model="applicantDetailScope.IsActive"
                                                               tabindex="2" />
                                                        <label for="chkIsActive">
                                                            @Resource.IsActive
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item" id="company_details">
                            <h1 class="accordion-header" id="headingTwo">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                    Company Details
                                </button>
                            </h1>
                            <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <div class="row">
                                        <div class="col-md-4 mt-lg-0 mt-md-0 mt-sm-0">
                                            <div class="form-group">
                                                <label>
                                                    @Resource.CurrentCompany
                                                </label>
                                                <input type="text" class="form-control" placeholder="Enter Current Company" name="CurrentCompany" ng-model="applicantDetailScope.CurrentCompany" />
                                            </div>
                                        </div>
                                        <div class="col-md-4 mt-lg-0 mt-md-0 mt-sm-3">
                                            <div class="form-group">
                                                <label>
                                                    @Resource.CurrentDesignation
                                                </label>
                                                <input type="text" class="form-control" placeholder="Enter Current Designation" name="CurrentDesignation" ng-model="applicantDetailScope.CurrentDesignation" />
                                            </div>
                                        </div>
                                        <div class="col-md-4 mt-lg-0 mt-md-0 mt-sm-3">
                                            <div class="form-group">
                                                <label>
                                                    @Resource.TotalExperience<span class="required-field">*</span>
                                                </label>
                                                <input type="text" ng-class="{'border-color' : frmRegister.TotalExperience.$dirty && frmRegister.TotalExperience.$invalid}" class="form-control" placeholder="Enter Total Experience" name="TotalExperience" ng-model="applicantDetailScope.TotalExperience" required />
                                                <div class="c">
                                                </div>
                                                <div class="label label-danger" data-ng-show="frmRegister.TotalExperience.$dirty && frmRegister.TotalExperience.$invalid">
                                                    <span data-ng-show="frmRegister.TotalExperience.$error.required">@Resource.TotalExperienceRequired</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 mt-3">
                                            <div class="form-group">
                                                <label>
                                                    @Resource.DetailedExperience<span class="required-field">*</span>
                                                </label>
                                                <input type="text" ng-class="{'border-color' : frmRegister.DetailedExperience.$dirty && frmRegister.DetailedExperience.$invalid}" class="form-control" placeholder="Enter Detailed Experience" name="DetailedExperience" ng-model="applicantDetailScope.DetailedExperience" required />
                                                <div class="c">
                                                </div>
                                                <div class="label label-danger" data-ng-show="frmRegister.DetailedExperience.$dirty && frmRegister.DetailedExperience.$invalid">
                                                    <span data-ng-show="frmRegister.DetailedExperience.$error.required">@Resource.DetailedExperienceRequired</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 mt-3">
                                            <div class="form-group">
                                                <label>
                                                    @Resource.CurrentCTC
                                                </label>
                                                <input type="text" class="form-control" placeholder="Enter Current CTC" name="CurrentCTC" ng-model="applicantDetailScope.CurrentCTC" />
                                            </div>
                                        </div>
                                        <div class="col-md-4 mt-3">
                                            <div class="form-group">
                                                <label>
                                                    @Resource.ExpectedCTC<span class="required-field">*</span>
                                                </label>
                                                <input type="text" ng-class="{'border-color' : frmRegister.ExpectedCTC.$dirty && frmRegister.ExpectedCTC.$invalid}" class="form-control" placeholder="Enter Expected CTC" name="ExpectedCTC" ng-model="applicantDetailScope.ExpectedCTC" required />
                                                <div class="c">
                                                </div>
                                                <div class="label label-danger" data-ng-show="frmRegister.ExpectedCTC.$dirty && frmRegister.ExpectedCTC.$invalid">
                                                    <span data-ng-show="frmRegister.ExpectedCTC.$error.required">@Resource.ExpectedCTCRequired</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 mt-3">
                                            <div class="form-group">
                                                <label>
                                                    @Resource.NoticePeriod<span class="required-field">*</span>
                                                </label>
                                                <input type="text" ng-class="{'border-color' : frmRegister.NoticePeriod.$dirty && frmRegister.NoticePeriod.$invalid}" class="form-control" placeholder="Enter Notice Period" name="NoticePeriod" ng-model="applicantDetailScope.NoticePeriod" required />
                                                <div class="c">
                                                </div>
                                                <div class="label label-danger" data-ng-show="frmRegister.NoticePeriod.$dirty && frmRegister.NoticePeriod.$invalid">
                                                    <span data-ng-show="frmRegister.NoticePeriod.$error.required">@Resource.NoticePeriodRequired</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 mt-3">
                                            <div class="form-group">
                                                <label>
                                                    @Resource.ReasonForChange
                                                </label>
                                                <input type="text" class="form-control" placeholder="Enter Reason For Change" name="ReasonForChange" ng-model="applicantDetailScope.ReasonForChange"  />
                                            </div>
                                        </div>
                                        <div class="col-md-4 mt-3">
                                            <div class="form-group">
                                                <label>
                                                    @Resource.CurrentLocation<span class="required-field">*</span>
                                                </label>
                                                <input type="text" ng-class="{'border-color' : frmRegister.CurrentLocation.$dirty && frmRegister.CurrentLocation.$invalid}" class="form-control" placeholder="Enter Current Location" name="CurrentLocation" ng-model="applicantDetailScope.CurrentLocation" required />
                                                <div class="c">
                                                </div>
                                                <div class="label label-danger" data-ng-show="frmRegister.CurrentLocation.$dirty && frmRegister.CurrentLocation.$invalid">
                                                    <span data-ng-show="frmRegister.CurrentLocation.$error.required">@Resource.CurrentLocationRequired</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 mt-3">
                                            <div class="form-group">
                                                <label>
                                                    @Resource.PreferedLocation<span class="required-field">*</span>
                                                </label>
                                                <input type="text" ng-class="{'border-color' : frmRegister.PreferedLocation.$dirty && frmRegister.PreferedLocation.$invalid}" class="form-control" placeholder="Enter Prefered Location" name="PreferedLocation" ng-model="applicantDetailScope.PreferedLocation" required />
                                                <div class="c">
                                                </div>
                                                <div class="label label-danger" data-ng-show="frmRegister.PreferedLocation.$dirty && frmRegister.PreferedLocation.$invalid">
                                                    <span data-ng-show="frmRegister.PreferedLocation.$error.required">@Resource.PreferedLocationRequired</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 mt-3">
                                            <div class="form-group">
                                                <label>
                                                    @Resource.ApplicantCV<span class="required-field">*</span>
                                                </label>
                                                <input type="file" class="form-control" name="ApplicantCV" id="file" accept="application/pdf" file-on-change="uploadFile" required/>
                                                <div class="c">
                                                </div>
                                                <div class="label label-danger" data-ng-show="frmRegister.ApplicantCV.$dirty && frmRegister.ApplicantCV.$invalid">
                                                    <span data-ng-show="frmRegister.ApplicantCV.$error.required">@Resource.ApplicantCVRequired</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3 mb-4">
                        <div class="col-md-10">
                            <div class="form-group">
                                <button type="submit" class="btn btn-success waves-effect w-md waves-light m-b-5" ng-disabled="frmRegister.FirstName.$invalid || frmRegister.LastName.$invalid || frmRegister.Email.$invalid
                                        || frmRegister.Phone.$invalid || frmRegister.DOB.$invalid || frmRegister.TotalExperience.$invalid || frmRegister.DetailedExperience.$invalid || frmRegister.ExpextedCTC.$invalid ||
                                        frmRegister.NoticePeriod.$invalid || frmRegister.CurrentLocation.$invalid || frmRegister.PreferedLocation.$invalid">
                                    {{applicantDetailScope.ApplicantId > 0 ? '@Resource.Update' : '@Resource.Save'}}
                                </button>
                                <button type="button" ng-click="ClearFormData(frmRegister)" class="btn btn-info waves-effect w-md waves-light m-b-5"
                                        tabindex="4">
                                    @Resource.Clear
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
                <hr class="section-divider" />
                <!-- end designation form -->
                <div class="row mt-4">
                    <div class="col-md-12">
                        <div class="row mb-3">
                            <div class="col-md-5">
                                <label class="table-title">
                                    @Resource.Registration @Resource.Details
                                </label>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <div class="checkbox checkbox-info">
                                        <input type="checkbox" id="chkRegisterActive" name="chkRegisterActive" ng-model="IsGetAll" ng-change="getApplicants(IsGetAll)"
                                               tabindex="2" />
                                        <label for="chkRegisterActive">
                                            View Active
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="input-group">
                                    <input type="text" tabindex="104" ng-model="search" class="form-control" ng-change="isSearchClicked = false;" placeholder="@string.Format(" {0} {1} {2}", Resource.Search, Resource.ApplicantRegister, Resource.Details)" />
                                    <a class="input-group-addon cursor-pointer" tabindex="105" ng-click="isSearchClicked = true;tableParams.page(1);tableParams.reload();">
                                        <i class="fa fa-search"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="form-control-static">
                                <scrollable-table scroll-height="492">
                                    <table ng-table="tableParams" id="datatable" class="table table-striped table-bordered table-hover">
                                        <tbody>
                                            <tr ng-repeat="h in applicants">
                                                <td data-title="'@Resource.SrNo'" header-class="'colSrno'" ng-class="'colSrno text-right'">
                                                    {{(tableParams.$params.page-1)*tableParams.$params.count+($index + 1)}}
                                                </td>
                                                <td data-title="'@Resource.ApplicantName'" sortable="'FirstName'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.FirstName}} {{h.MiddleName}} {{h.LastName}}
                                                </td>
                                                <td data-title="'@Resource.ApplicantEmail'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.Email}}
                                                </td>
                                                <td data-title="'@Resource.ApplicantPhone'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.Phone}}
                                                </td>
                                                <td data-title="'@Resource.ApplicantAddress'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.Address}}
                                                </td>
                                                <td data-title="'@Resource.ApplicantDOB'"header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.DateOfBirth | date}}
                                                </td>
                                                <td data-title="'@Resource.Active'" header-class="'colActive'" ng-class="'colActive text-center'">
                                                    <input type="checkbox" class="js-switch" ui-switch options="switchOptions" ng-model="h.IsActive"
                                                           ng-disabled="true" />
                                                </td>
                                                <td data-title="'@Resource.Download'" header-class="'colDownload'" ng-class="'colDownload text-center'">
                                                    <a ng-if="h.FileRelativePath != null" href="{{h.FileRelativePath}}" target="_blank" download>
                                                        <img src="~/Content/images/download.svg" style="width:25px" alt="Download"/>
                                                    </a>
                                                    @*<button class="btn btn-primary" ng-if="h.FileRelativePath != null" ng-click="downloadPDF(h.FileRelativePath,h.FileName,'application/pdf')">Download CV</button>*@
                                                </td>
                                                <td data-title="'@Resource.Action'" header-class="'colAction'" ng-class="'colAction text-center'">
                                                    <a class="btn btn-icon btn-white btn-xs waves-effect waves-light m-r-5 btn-edit" title="Edit"
                                                       ng-click="EditApplicantDetails(h.ApplicantId)">
                                                        <i class="fa fa-edit"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </scrollable-table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end Registration details list -->
            </div>
        </div>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/ApplicantRegister/Registration")
}
