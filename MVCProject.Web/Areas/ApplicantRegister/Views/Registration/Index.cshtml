@{
    ViewBag.Title = @Resource.Registration;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .colSrno {
        width: 40px !important;
        min-width: 40px !important;
        max-width: 40px !important;
    }

    .colPosition {
        width: 200px !important;
        min-width: 200px !important;
        max-width: 200px !important;
    }

    .colActive {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
    }

    .colAction {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
    }
</style>

<div ng-controller="RegistrationCtrl" novalidate ng-init="getAllApplicants()">
    <div class="main-page-title title-icon relative l">
        <i class="ti-id-badge icon-position" style="padding-top: 8px;"></i>
        <h4 class="header-title-sub l">@Resource.ApplicantRegister</h4>
        <div class="pull-right">
        </div>
    </div>
    <div class="card-box">
        <div class="row">
            <div class="col-md-12">
                <!-- start designation form -->
                <form name="frmRegister" ng-submit="SaveApplicantDetails(applicantDetailScope)"
                      novalidate>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    @Resource.ApplicantName <span class="required-field">*</span>
                                </label>
                                <input type="text" class="form-control" ng-focus="true" name="Name" ng-model="applicantDetailScope.Name" required placeholder="Enter Name" maxlength="250">
                                <div class="c">
                                </div>
                                <div class="label label-danger" data-ng-show="frmRegister.Name.$dirty && frmRegister.Name.$invalid">
                                    <span data-ng-show="frmRegister.Name.$error.required">@Resource.NameRequired</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--Remarks-->
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    @Resource.ApplicantEmail
                                </label>
                                <input type="text" class="form-control" placeholder="Enter Email" name="Email" ng-model="applicantDetailScope.Email" required />
                                <div class="c">
                                </div>
                                <div class="label label-danger" data-ng-show="frmRegister.Email.$dirty && frmRegister.Email.$invalid">
                                    <span data-ng-show="frmRegister.Email.$error.required">@Resource.EmailRequired</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    @Resource.ApplicantPhone
                                </label>
                                <input type="text" class="form-control" placeholder="Enter Phone" name="Phone" ng-model="applicantDetailScope.Phone" required />
                                <div class="c">
                                </div>
                                <div class="label label-danger" data-ng-show="frmRegister.Phone.$dirty && frmRegister.Phone.$invalid">
                                    <span data-ng-show="frmRegister.Phone.$error.required">@Resource.PhoneRequired</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    @Resource.ApplicantAddress
                                </label>
                                <input type="text" class="form-control" placeholder="Enter Address" name="Address" ng-model="applicantDetailScope.Address" required />
                                <div class="c">
                                </div>
                                <div class="label label-danger" data-ng-show="frmRegister.Address.$dirty && frmRegister.Address.$invalid">
                                    <span data-ng-show="frmRegister.Address.$error.required">@Resource.AddressRequired</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-10">
                            <div class="form-group">
                                <button type="submit" class="btn btn-success waves-effect w-md waves-light m-b-5" ng-disabled="frmRegister.Name.$invalid">
                                    {{applicantDetailScope.ApplicantId > 0 ? '@Resource.Update' : '@Resource.Save'}}
                                </button>
                                <button type="button" ng-click="ClearFormData(frmRegister)" class="btn btn-info waves-effect w-md waves-light m-b-5"
                                        tabindex="4">
                                    @Resource.Clear
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- end designation form -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-7">
                                <label class="table-title">
                                    @Resource.Registration @Resource.Details
                                </label>
                            </div>
                            <div class="col-md-5">
                                <div class="input-group">
                                    <input type="text" tabindex="104" ng-model="search" class="form-control" ng-change="isSearchClicked = false;" placeholder="@string.Format("{0} {1} {2}", Resource.Search, Resource.Designation, Resource.Details)" />
                                    <a class="input-group-addon cursor-pointer" tabindex="105" ng-click="isSearchClicked = true;tableParams.page(1);tableParams.reload();">
                                        <i class="fa fa-search"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="form-control-static">
                                <scrollable-table scroll-height="427">
                                    <table ng-table="tableParams" id="datatable" class="table table-striped table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>SrNo</th>
                                                <th>Name</th>
                                                <th>Email</th>
                                                <th>Phone</th>
                                                <th>Address</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="h in applicants">
                                                <td data-title="'@Resource.SrNo'" ng-class="'colSrno text-right'">
                                                    {{$index+1}}
                                                </td>
                                                <td ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.Name}}
                                                </td>
                                                <td ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.Email}}
                                                </td>
                                                <td ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.Phone}}
                                                </td>
                                                <td ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.Address}}
                                                </td>
                                                <td ng-class="'colAction text-center'">
                                                    <a class="btn btn-icon btn-white btn-xs waves-effect waves-light m-r-5 btn-edit" title="Edit"
                                                       ng-click="EditApplicantDetails(h.ApplicantId)">
                                                        <i class="fa fa-edit"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </scrollable-table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end Registration details list -->
            </div>
        </div>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/ApplicantRegister/Registration")
}
