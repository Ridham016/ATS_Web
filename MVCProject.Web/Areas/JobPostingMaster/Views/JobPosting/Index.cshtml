@{
    ViewBag.Title = @Resource.JobPostingRegister;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .colSrno {
        width: 40px !important;
        min-width: 40px !important;
        max-width: 40px !important;
    }

    .colPosition {
        width: 200px !important;
        min-width: 200px !important;
        max-width: 200px !important;
    }

    .colActive {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
    }

    .colAction {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
    }
    .col {
        width: 120px !important;
        min-width: 120px !important;
        max-width: 120px !important;
    }
    .colStatus {
        width: 100px !important;
        min-width: 100px !important;
        max-width: 100px !important;
    }
</style>

<div ng-controller="JobPostingCtrl" novalidate>
    <div class="main-page-title title-icon relative l">
        <i class="ti-id-badge icon-position" style="padding-top: 8px;"></i>
        <h4 class="header-title-sub l">@Resource.JobPostingRegister</h4>
        <div class="pull-right">
        </div>
    </div>
    <div class="card-box">
        <div class="row ">
            <div class="col-md-12">
                <!-- start designation form -->
                <form name="frmRegister" ng-init="getCompanyDetails();getPositionDetails();getPostingStatus();" ng-submit="SavePostingDetails(jobpostingDetailScope)"
                      novalidate>
                    <div class="row mb-3">
                        <div class="col-lg-4 col-md-6 mt-3">
                            <div class="form-group">
                                <label>
                                    @Resource.Position <span class="required-field">*</span>
                                </label>
                                <div angucomplete-alt
                                     field-tabindex="14"
                                     input-name="Position"
                                     id="Position"
                                     placeholder="Enter Position"
                                     input-class="form-control"
                                     pause="400"
                                     minlength="1"
                                     maxlength="255"
                                     selected-object="Position"
                                     local-data="jobpostingDetail"
                                     initial-value="selectedPosition"
                                     match-class="blue"
                                     search-fields="PositionName"
                                     title-field="PositionName"
                                     override-suggestions="true"
                                     on-select="Position()"
                                     text-searching="@Resource.AutocompleteSearching"
                                     text-no-results="@Resource.NoRecordFound">
                                </div>
                                <div class="c">
                                </div>
                                <div class="label label-danger" data-ng-show="frmRegister.Position.$dirty && frmRegister.Position.$invalid">
                                    <span data-ng-show="frmRegister.Position.$error.required">@Resource.PosiitonRequired</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6 mt-3">
                            <div class="form-group">
                                <label>
                                    @Resource.Company <span class="required-field">*</span>
                                </label>
                                <select class="form-select" name="Company" ng-model="jobpostingDetailScope.CompanyId" required>
                                    <option value="" selected disabled>Select Company Name</option>
                                    <option ng-repeat="h in companyDetails" value="{{h.Id}}">{{h.CompanyName}}</option>
                                </select>
                                <div class="c">
                                </div>
                                <div class="label label-danger" data-ng-show="frmRegister.Company.$dirty && frmRegister.Company.$invalid">
                                    <span data-ng-show="frmRegister.Company.$error.required">@Resource.CompanyRequired</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6 mt-3">
                            <div class="form-group">
                                <label>
                                    @Resource.PostingStatus <span class="required-field">*</span>
                                </label>
                                <select class="form-select" name="PostingStatus" ng-model="jobpostingDetailScope.PostingStatusId" required>
                                    <option value="" selected disabled>Select Posting Status</option>
                                    <option ng-repeat="h in postingStatusDetails" value="{{h.Id}}">{{h.PostingStatus}}</option>
                                </select>
                                <div class="c">
                                </div>
                                <div class="label label-danger" data-ng-show="frmRegister.PostingStatus.$dirty && frmRegister.PostingStatus.$invalid">
                                    <span data-ng-show="frmRegister.PostingStatus.$error.required">@Resource.PostingStatusRequired</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6 mt-3">
                            <div class="form-group">
                                <label>
                                    @Resource.PostingExperience<span class="required-field">*</span>
                                </label>
                                <input type="text" class="form-control" placeholder="Enter Experience" name="Experience" ng-model="jobpostingDetailScope.Experience" required />
                                <div class="c">
                                </div>
                                <div class="label label-danger" data-ng-show="frmRegister.Experience.$dirty && frmRegister.Experience.$invalid">
                                    <span data-ng-show="frmRegister.Experience.$error.required">@Resource.PostingExperienceRequired</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6 mt-3">
                            <div class="form-group">
                                <label>
                                    @Resource.PostingSalary<span class="required-field">*</span>
                                </label>
                                <input type="text" class="form-control" placeholder="Enter Salary" name="Salary" ng-model="jobpostingDetailScope.Salary" required />
                                <div class="c">
                                </div>
                                <div class="label label-danger" data-ng-show="frmRegister.Salary.$dirty && frmRegister.Salary.$invalid">
                                    <span data-ng-show="frmRegister.Salary.$error.required">@Resource.PostingSalaryRequired</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6 mt-3">
                            <div class="form-group">
                                <div class="form-control-static">
                                    <label>

                                    </label>
                                    <div class="checkbox checkbox-info p-0">
                                        <input type="checkbox" id="chkIsActive" name="chkIsActive" ng-model="jobpostingDetailScope.IsActive"
                                               tabindex="2" />
                                        <label for="chkIsActive">
                                            @Resource.IsActive
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-md-6">
                            <h4 class="my-3">
                                 @Resource.JobDescription
                            </h4>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-lg-12 col-md-6 mt-3">
                            <div class="form-group">
                                <label>
                                    @Resource.JobDetail 
                                </label>
                                <textarea rows="7" type="text" class="form-control" placeholder="Enter Job Detail" name="JobDetail" ng-model="jobpostingDetailScope.JobDetail"></textarea>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6 mt-3">
                            <div class="form-group">
                                <label>
                                    @Resource.EducationUG
                                </label>
                                <textarea rows="3" type="text" class="form-control" placeholder="Eg.  BCA in Computers" name="Education_UG" ng-model="jobpostingDetailScope.Education_UG" ></textarea>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6 mt-3">
                            <div class="form-group">
                                <label>
                                    @Resource.EducationPG
                                </label>
                                <textarea rows="3" type="text" class="form-control" placeholder="Eg. MCA in Computers" name="Education_PG" ng-model="jobpostingDetailScope.Education_PG" ></textarea>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6 mt-3">
                            <div class="form-group">
                                <label>
                                    @Resource.EmploymentType
                                </label>
                                <textarea rows="3" type="text" class="form-control" placeholder="Eg. Full Time, Part Time" name="EmploymentType" ng-model="jobpostingDetailScope.EmploymentType" ></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-10">
                            <div class="form-group">
                                <button type="submit" class="btn btn-success waves-effect w-md waves-light m-b-5">
                                    {{jobpostingDetailScope.PostingId > 0 ? '@Resource.Update' : '@Resource.Save'}}
                                </button>
                                <button type="button" ng-click="ClearFormData(frmRegister)" class="btn btn-danger waves-effect w-md waves-light m-b-5"
                                        tabindex="4">
                                    @Resource.Clear
                                </button>
                            </div>
                        </div>
                    </div>
                </form>

                <hr class="section-divider" />
                <!-- end designation form -->
                <div class="row mt-4">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-lg-3 col-md-6">
                                <label class="table-title my-3">
                                    @Resource.JobPosting @Resource.Details
                                </label>
                            </div>
                            <div class="col-lg-5 col-md-6 offset-lg-4">
                                <form id="frmSearch" ng-submit="isSearchClicked = true;tableParams.page(1);tableParams.reload();" novalidate>
                                    <div class="input-group">
                                        <input type="text" tabindex="104" ng-model="search" class="form-control" ng-change="isSearchClicked = false;" placeholder="@string.Format(" {0} {1} {2}", Resource.Search, Resource.JobPosting, Resource.Details)" />
                                        <a class="input-group-addon cursor-pointer" tabindex="105" ng-click="isSearchClicked = true;tableParams.page(1);tableParams.reload();">
                                            <i class="fa fa-search"></i>
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 mt-3">
                        <div class="form-group">
                            <div class="form-control-static">
                                <scrollable-table scroll-height="500">
                                    <table ng-table="tableParams" id="datatable" @*ng-init="getAllInterviewers()"*@ class="table table-bordered table-hover">
                                        <tbody>
                                            <tr ng-repeat="h in postings">
                                                <td data-title="'@Resource.SrNo'" header-class="'colSrno'" ng-class="'colSrno text-right'">
                                                    {{(tableParams.$params.page-1)*tableParams.$params.count+($index + 1)}}
                                                </td>
                                                <td data-title="'@Resource.Position'" sortable="'PositionName'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.PositionName}}
                                                </td>
                                                <td data-title="'@Resource.Company'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.CompanyName}}
                                                </td>
                                                <td data-title="'@Resource.Experience'" header-class="'col'" ng-class="'col breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.Experience}}
                                                </td>
                                                <td data-title="'@Resource.Salary'" header-class="'col'" ng-class="'col breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.Salary}}
                                                </td>
                                                <td data-title="'@Resource.PostingStatus'" header-class="'colStatus'" ng-class="'colStatus breakword overflow-ellipsis cursor-pointer'">
                                                    {{h.PostingStatus}}
                                                </td>
                                                <td data-title="'@Resource.Active'" header-class="'colActive'" ng-class="'colActive text-center'">
                                                    <input type="checkbox" class="js-switch" ui-switch options="switchOptions" ng-model="h.IsActive"
                                                           ng-disabled="true" />
                                                </td>
                                                <td data-title="'@Resource.Action'" header-class="'colAction'" ng-class="'colAction text-center'">
                                                    <a class="btn btn-icon cursor-pointer btn-white btn-xs waves-effect waves-light m-r-5 btn-edit" title="Edit"
                                                       ng-click="EditPostingDetails(h.PostingId)">
                                                        <i class="fa fa-edit"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </scrollable-table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end Registration details list -->
            </div>
        </div>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/JobPosting/JobPosting")
}
