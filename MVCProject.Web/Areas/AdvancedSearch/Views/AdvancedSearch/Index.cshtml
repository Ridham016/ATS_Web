@{
    ViewBag.Title = "AdvancedSearch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .colSrno {
        width: 40px !important;
        min-width: 40px !important;
        max-width: 40px !important;
    }

    .colPosition {
        width: 200px !important;
        min-width: 200px !important;
        max-width: 200px !important;
    }

    .colActive {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
    }

    .colAction {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
    }
</style>

<div ng-controller="AdvancedSearchCtrl" novalidate>
    <div class="main-page-title title-icon relative l">
        <i class="ti-user icon-position" style="padding-top: 8px;"></i>
        <h4 class="header-title-sub l">@MVCProject.Common.Resources.Resource.AdvancedSearch</h4>
        <div class="pull-right">
        </div>
    </div>
    <div class="card-box">
        <div class="row">
            <div class="col-md-12">
                <form name="frmRegister" ng-submit="advancedsearch(searchScope)"
                      novalidate>
                    <div class="row mb-3">
                        <div class="col-md-4 mt-lg-0 mt-md-0 mt-sm-0">
                            <div class="form-group">
                                <label>
                                    @MVCProject.Common.Resources.Resource.StatusName @*<span class="required-field"></span>*@
                                </label>
                                <select class="form-control" name="StatusId" id="Status" ng-init="GetStatus()" ng-model="searchScope.StatusId">
                                    <option value="" selected>Status</option>
                                    <option ng-repeat="s in status" value="{{s.StatusId}}">{{s.StatusName}}</option>
                                </select>
                                @*<input type="text" class="form-control" ng-focus="true" name="InterviewerName" ng-model="searchScope.StatusId" required placeholder="Enter Name" maxlength="250">
        <div class="c">
        </div>
        <div class="label label-danger" data-ng-show="frmRegister.StatusId.$dirty && frmRegister.StatusId.$invalid">
            <span data-ng-show="frmRegister.StatusId.$error.required">@MVCProject.Common.Resources.Resource.Required</span>
        </div>*@
                            </div>
                        </div>

                        <!--Remarks-->
                        <div class="col-md-4 mt-3">
                            <div class="form-group">
                                <label>
                                    @MVCProject.Common.Resources.Resource.StartDate<span class="required-field">*</span>
                                </label>
                                <input type="date" ng-class="{'border-color' : frmRegister.StartDate.$dirty && frmRegister.StartDate.$invalid}" class="form-control" placeholder="Enter Start Date" name="StartDate" ng-model="searchScope.StartDate" required />
                                <div class="c">
                                </div>
                                <div class="label label-danger" data-ng-show="frmRegister.StartDate.$dirty && frmRegister.StartDate.$invalid">
                                    <span data-ng-show="frmRegister.StartDate.$error.required">@MVCProject.Common.Resources.Resource.Required</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mt-3">
                            <div class="form-group">
                                <label>
                                    @MVCProject.Common.Resources.Resource.EndDate<span class="required-field">*</span>
                                </label>
                                <input type="date" ng-class="{'border-color' : frmRegister.EndDate.$dirty && frmRegister.EndDate.$invalid}" class="form-control" placeholder="Enter End Date" name="EndDate" ng-model="searchScope.EndDate" required />
                                <div class="c">
                                </div>
                                <div class="label label-danger" data-ng-show="frmRegister.EndDate.$dirty && frmRegister.EndDate.$invalid">
                                    <span data-ng-show="frmRegister.EndDate.$error.required">@MVCProject.Common.Resources.Resource.Required</span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col-md-10">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success waves-effect w-md waves-light m-b-5" ng-disabled="frmRegister.StatusId.$invalid">
                                        Search
                                    </button>
                                    <button type="button" ng-click="ClearFormData(frmRegister)" class="btn btn-info waves-effect w-md waves-light m-b-5"
                                            tabindex="4">
                                        @MVCProject.Common.Resources.Resource.Clear
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <hr class="section-divider" />
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="form-control-static">
                            <scrollable-table scroll-height="492">
                                <table ng-table="tableParams" id="datatable" class="table table-striped table-bordered table-hover" ng-controller="RegistrationCtrl">
                                    <tbody>
                                        <tr ng-repeat="h in applicants">
                                            <td data-title="'@MVCProject.Common.Resources.Resource.SrNo'" header-class="'colSrno'" ng-class="'colSrno text-right'">
                                                {{(tableParams.$params.page-1)*tableParams.$params.count+($index + 1)}}
                                            </td>
                                            <td data-title="'@MVCProject.Common.Resources.Resource.ApplicantName'" sortable="'FirstName'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                {{h.FirstName}} {{h.MiddleName}} {{h.LastName}}
                                            </td>
                                            <td data-title="'@MVCProject.Common.Resources.Resource.ApplicantEmail'" sortable="'Email'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                {{h.Email}}
                                            </td>
                                            <td data-title="'@MVCProject.Common.Resources.Resource.ApplicantPhone'" sortable="'Phone'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                {{h.Phone}}
                                            </td>
                                            <td data-title="'@MVCProject.Common.Resources.Resource.StatusName'" sortable="'Status'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                {{h.StatusName}}
                                            </td>
                                            <td ng-class="'colAction text-center'">
                                                <a class="btn btn-icon btn-white btn-xs waves-effect waves-light m-r-5 b-0" title="Action"
                                                   href="~/ScheduleManagement/Schedule/Details#?ApplicantId={{h.ApplicantId}}">
                                                    <img src="~/Content/images/view-details-icon.svg" class="ViewLogo" />
                                                </a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </scrollable-table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/AdvancedSearch/AdvancedSearch")
    @Scripts.Render("~/bundles/ApplicantRegister/Registration")

}
