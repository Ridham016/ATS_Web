@{
    ViewBag.Title = "AdvancedSearch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .colSrno {
        width: 40px !important;
        min-width: 40px !important;
        max-width: 40px !important;
    }

    .colPosition {
        width: 200px !important;
        min-width: 200px !important;
        max-width: 200px !important;
    }

    .colActive {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
    }

    .colAction {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
    }
    .colPhone {
        width: 130px !important;
        min-width: 130px !important;
        max-width: 130px !important;
    }
    .colStatus {
        width: 130px !important;
        min-width: 130px !important;
        max-width: 130px !important;
    } 
</style>

<div ng-controller="AdvancedSearchCtrl" novalidate>
    <div class="main-page-title title-icon relative l">
        <i class="ti-user icon-position" style="padding-top: 8px;"></i>
        <h4 class="header-title-sub l">@MVCProject.Common.Resources.Resource.AdvancedSearch</h4>
        <div class="pull-right">
        </div>
    </div>
    <div class="card-box">
        <div class="row">
            <div class="col-md-12">
                <form name="frmRegister" ng-submit="advancedsearch(searchDetail)"
                      novalidate>
                    <div class="row mb-3">
                        <div class="col-md-4 mt-lg-0 mt-md-0 mt-sm-0">
                            <div class="form-group">
                                <label>
                                    @MVCProject.Common.Resources.Resource.StatusName @*<span class="required-field"></span>*@
                                </label>
                                <select class="form-control" name="StatusId" id="Status" ng-init="GetStatus()" ng-model="searchDetail.StatusId">
                                    <option value="" selected>Status</option>
                                    <option ng-repeat="s in status" value="{{s.StatusId}}">{{s.StatusName}}</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    @MVCProject.Common.Resources.Resource.StartDate
                                </label>
                                <input type="date" class="form-control" name="StartDate" ng-model="searchDetail.StartDate" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    @MVCProject.Common.Resources.Resource.EndDate
                                </label>
                                <input type="date" class="form-control" name="EndDate" ng-model="searchDetail.EndDate" />
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-md-10">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success waves-effect w-md waves-light mb-5">
                                        Search
                                    </button>
                                    <button type="button" ng-click="ClearFormData(frmRegister)" class="btn btn-info waves-effect w-md waves-light mb-5"
                                            tabindex="4">
                                        @MVCProject.Common.Resources.Resource.Clear
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <hr class="section-divider" />
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="form-control-static">
                            <scrollable-table scroll-height="485">
                                <table ng-table="tableParams" id="datatable" class="table table-striped table-bordered table-hover">
                                    <tbody>
                                        <tr ng-repeat="h in applicants">
                                            <td data-title="'@MVCProject.Common.Resources.Resource.SrNo'" header-class="'colSrno'" ng-class="'colSrno text-right'">
                                                {{(tableParams.$params.page-1)*tableParams.$params.count+($index + 1)}}
                                            </td>
                                            <td data-title="'@MVCProject.Common.Resources.Resource.ApplicantName'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                {{h.FirstName}} {{h.MiddleName}} {{h.LastName}}
                                            </td>
                                            <td data-title="'@MVCProject.Common.Resources.Resource.ApplicantEmail'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                {{h.Email}}
                                            </td>
                                            <td data-title="'@MVCProject.Common.Resources.Resource.ApplicantPhone'" header-class="'colPhone'" ng-class="'colPhone breakword overflow-ellipsis cursor-pointer'">
                                                {{h.Phone}}
                                            </td>
                                            <td data-title="'@MVCProject.Common.Resources.Resource.StatusName'" header-class="'colStatus'" ng-class="'colStatus breakword overflow-ellipsis cursor-pointer'">
                                                {{h.StatusName}}
                                            </td>
                                            <td data-title="'@MVCProject.Common.Resources.Resource.EntryDate'" header-class="'colPosition'" ng-class="'colPosition breakword overflow-ellipsis cursor-pointer'">
                                                {{h.EntryDate | date : 'MMM d, y h:mm a'}}
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </scrollable-table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/AdvancedSearch/AdvancedSearch")

}
