@{
    ViewBag.Title = MVCProject.Common.Resources.Resource.Calendar;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .has-events {
        background-color: #8fdf82;
    }

    .height {
        max-height: 74vh;
    }
</style>

<div ng-controller="CalendarCtrl">
    <div class="main-page-title title-icon relative l ">
        <i class="fa fa fa-home icon-position" style="padding-top: 8px;"></i>
        <h3 class="header-title-sub l">@MVCProject.Common.Resources.Resource.Calendar</h3>
        <div class="pull-right">
        </div>
    </div>
    <div class="card-box">
        <div class="row">
            <div class="col-md-8">
                <div id="calendar" ui-calendar="uiConfig.calendar" ng-model="eventSources" class="bg-light p-3" calendar="myCalendar"></div>
            </div>
            <div class="col-md-4">
                <div class="schedule-event-details">
                    <div class="card alert overflow-auto height">
                        <div class="d-flex justify-content-between align-items-center mt-0 mb-3">
                            <h4 class="meeting-title font-bold me-3" ng-class="{'ms-0' : length == 0}"> @Resource.Meeting</h4>
                            <h5>{{Date | date }}</h5>
                        </div>
                        <p ng-show="length == 0">No Meetings Scheduled</p>
                        <div ng-show="length != 0">
                            <div class="card event-card" ng-repeat="SelectedEvent in SelectedEvents">
                                <div class="card-body">
                                    <p class="mb-2"><span><i class="time-icon fa fa-clock-o"></i></span><span class="event-detail">{{SelectedEvent.start | date : 'h:mm a'}} - {{SelectedEvent.end | date : 'h:mm a'}}</span></p>
                                    <p class="mb-2"><span><i class="interview-icon fa fa-user"></i></span><span class="event-detail">Meeting with <span class="fw-bold">{{SelectedEvent.Applicant}}</span></span></p>
                                    <p class="mb-2"><span class="event-detail"><i class="meeting-icon ti-agenda"></i> {{SelectedEvent.Interviewer}}</span></p>
                                    <p class="mb-0">
                                        <span class="event-detail">
                                            <i class="interview-mode-icon ti-world"></i>
                                            <span ng-repeat="(key,value) in Mode">
                                                <span ng-if="key == SelectedEvent.Mode">{{value}}</span>
                                            </span>
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section scripts {
    @Scripts.Render("~/bundles/Calendar/Calendar")
}