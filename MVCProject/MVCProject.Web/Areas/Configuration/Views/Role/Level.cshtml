@{
    ViewBag.Title = Resource.RoleLevel;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .colSrno
    {
        width: 50px !important;
        min-width: 50px !important;
        max-width: 50px !important;
        text-align: right;
    }
    
    .colLevel
    {
        min-width: 100px !important;
    }
    
    .colActive
    {
        width: 80px !important;
        min-width: 80px !important;
        max-width: 80px !important;
    }
</style>
<div ng-controller="RoleLevelCtrl">
    <!-- start title section-->
    <div class="main-page-title title-icon relative l">
        <i class="ti-map-alt icon-position" style="padding-top: 8px;"></i>
        <h4 class="header-title-sub l">
            Resource.RoleLevel</h4>
    </div>
    <!-- end title section-->
    <!-- start body section-->
    <div class="card-box">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <div class="table-responsive main-table">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="colSrno">
                                    @Resource.SrNo
                                </th>
                                <th class="colLevel">
                                    @Resource.Level
                                </th>
                                <th class="colActive">
                                    @Resource.IsActive
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="level in roleLeveles">
                                <td class="colSrno">
                                    {{$index+1}}
                                </td>
                                <td class="colLevel">
                                    {{level.LevelName}}
                                </td>
                                <td class="colActive">
                                <input type="checkbox" class="js-switch" ui-switch options="switchOptions" ng-model="level.IsActive" ng-disabled="true" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- end body section-->
</div>

@section scripts {
    @Scripts.Render("~/bundles/Configuration/RoleLevel")
}
