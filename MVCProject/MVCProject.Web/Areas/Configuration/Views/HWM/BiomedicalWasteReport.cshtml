@{
    ViewBag.Title = Resource.BWRHeader;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div ng-controller="BiomedicalWasteReportCtrl">
    <div class="main-page-title title-icon relative l">
        <i class="ti-map-alt icon-position" style="padding-top: 8px;"></i>
        <h4 class="header-title-sub l">
            @Resource.MSWRHeader
        </h4>
    </div>
    <div class="card-box">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-2">
                        <div class="form-group" style="margin-top: 10px;">
                            <label>
                                @Resource.FinYear
                            </label>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <select class="form-control" ng-model="BiomedicalWasteReport.Year" ng-required="true" 
                                    ng-options="category.Id as category.Name for category in BiomedicalWasteReportYear">
                                <option value="">@string.Format("{0}", @Resource.FinYear)</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-1" style="margin-top: 10px;">
                        <b>:FY
                            <element ng-if="BiomedicalWasteReport.Year">{{BiomedicalWasteReport.Year}}-{{BiomedicalWasteReport.Year+1}} </element>
                        </b>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <button type="button" class="btn btn-success w-md waves-light" ng-click="fnBiomedicalWasteReport(BiomedicalWasteReport.Year)">
                                @Resource.Search <i class="fa fa-search"></i>
                            </button>
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="btn btn-danger w-md waves-light" ng-click="fnClearBiomedicalWasteReport()">
                                @Resource.Clear <i class="fa fa-remove"></i>
                            </button>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="form-control-static">
                                <div class="table-responsive main-table">
                                    <table class="table table-striped table-bordered table-hover no-margin">
                                        <thead>
                                            <tr>
                                                <td rowspan="2" style="text-align: center;">
                                                    <b>
                                                        @Resource.Quantity
                                                    </b>
                                                </td>
                                                <td colspan="12" style="text-align: center;">
                                                    <b>
                                                        @Resource.MSWR1AprTo31Mar
                                                        <element ng-if="BiomedicalWasteReport.Year">
                                                        {{BiomedicalWasteReport.Year}}-{{BiomedicalWasteReport.Year+1}} </b>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>
                                                    @Resource.MonthApr
                                                </th>
                                                <th>
                                                    @Resource.MonthMay
                                                </th>
                                                <th>
                                                    @Resource.MonthJun
                                                </th>
                                                <th>
                                                    @Resource.MonthJul
                                                </th>
                                                <th>
                                                    @Resource.MonthAug
                                                </th>
                                                <th>
                                                    @Resource.MonthSep
                                                </th>
                                                <th>
                                                    @Resource.MonthOct
                                                </th>
                                                <th>
                                                    @Resource.MonthNov
                                                </th>
                                                <th>
                                                    @Resource.MonthDec
                                                </th>
                                                <th>
                                                    @Resource.MonthJan
                                                </th>
                                                <th>
                                                    @Resource.MonthFeb
                                                </th>
                                                <th>
                                                    @Resource.MonthMar
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="x in names">
                                                <td style="text-align: center;">
                                                    <b>@Resource.MSWRMT</b>
                                                </td>
                                                <td data-title="'@Resource.MonthApr'">
                                                    {{x._4}}
                                                </td>
                                                <td data-title="'@Resource.MonthMay'">
                                                    {{x._5}}
                                                </td>
                                                <td data-title="'@Resource.MonthJun'">
                                                    {{x._6}}
                                                </td>
                                                <td data-title="'@Resource.MonthJul'">
                                                    {{x._7}}
                                                </td>
                                                <td data-title="'@Resource.MonthAug'">
                                                    {{x._8}}
                                                </td>
                                                <td data-title="'@Resource.MonthSep'">
                                                    {{x._9}}
                                                </td>
                                                <td data-title="'@Resource.MonthOct'">
                                                    {{x._10}}
                                                </td>
                                                <td data-title="'@Resource.MonthNov'">
                                                    {{x._11}}
                                                </td>
                                                <td data-title="'@Resource.MonthDec'">
                                                    {{x._12}}
                                                </td>
                                                <td data-title="'@Resource.MonthJan'">
                                                    {{x._1}}
                                                </td>
                                                <td data-title="'@Resource.MonthFeb'">
                                                    {{x._2}}
                                                </td>
                                                <td data-title="'@Resource.MonthMar'">
                                                    {{x._3}}
                                                </td>
                                            </tr>
                                            <tr ng-repeat="x in names">
                                                <td style="text-align: center;">
                                                    <b>@Resource.MSWRAT</b>
                                                </td>
                                                <td colspan="12" style="text-align: center;">
                                                    {{(x._4+x._5+x._6+x._7+x._8+x._9+x._10+x._11+x._12+x._1+x._2+x._3)/1000}}
                                                </td>
                                            </tr>
                                            <tr ng-if="names.length == 0">
                                                <td colspan="13" class="no-record">
                                                    @Resource.NoRecordAvailable
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/Configuration/BiomedicalWasteReport");
}
